     ViewBag.Title = Model.Name;
     Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>@Model.Name</h2>

<ul>
    <li>Membership Type: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate</li>
    <li>Date Added: @Model.AddedDate</li>
    <li>Number In Stock: @Model.NumberInStock</li>

</ul>

